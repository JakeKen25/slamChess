{
  "name": "slam-chess",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json && node scripts/prepare-lambda.mjs",
    "test": "jest --runInBand",
    "test:unit": "jest --runInBand test/engine",
    "test:integration": "jest --runInBand test/api",
    "cdk:synth": "npm run build && cdk synth --app \"node dist/infra/bin/deploy.js\"",
    "cdk:deploy": "npm run build && cdk deploy --app \"node dist/infra/bin/deploy.js\"",
    "web:dev": "npm run dev --workspace @slamchess/web",
    "web:build": "npm run build --workspace @slamchess/web"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.767.0",
    "@aws-sdk/lib-dynamodb": "^3.767.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.147",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.4",
    "aws-cdk": "^2.1003.0",
    "aws-cdk-lib": "^2.181.1",
    "constructs": "^10.4.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "workspaces": [
    "apps/*"
  ]
}
